<%- include ('partials/header') %>

<main id="content" role="main">
  <!-- Login Form -->
  <div class="container space-2">
    <form
      class=" w-md-75 w-lg-50 mx-md-auto"
      method="POST"
      action="/users/register"
    >
      <!-- Title -->
      <div class="mb-7">
        <h1 class="h3 text-primary font-weight-normal mb-0">
          Benvenuto in <span class="font-weight-semi-bold">Graffitis</span>
        </h1>
        <p>Compila il form per iniziare</p>
      </div>
      <!-- End Title -->

      <!-- Form Group -->
      <div class="js-form-message form-group">
        <label class="form-label" for="signinSrEmail">Indirizzo E-Mail</label>
        <input
          type="email"
          class="form-control"
          name="email"
          id="signinSrEmail"
          placeholder="Indirizzo E-Mail"
          aria-label="Indirizzo E-Mail"
          required
          data-msg="Inserisci un indirizzo valido"
          data-error-class="u-has-error"
          data-success-class="u-has-success"
        />
      </div>
      <!-- End Form Group -->

      <!-- Form Group -->
      <div class="js-form-message form-group">
        <label class="form-label" for="signinSrPassword">Password</label>
        <input
          type="password"
          class="form-control"
          name="password"
          id="signinSrPassword"
          placeholder="********"
          aria-label="********"
          required
          data-msg="La password non è valida. Riprova."
          data-error-class="u-has-error"
          data-success-class="u-has-success"
        />
      </div>
      <!-- End Form Group -->

      <!-- Form Group -->
      <div class=" form-group">
        <label class="form-label" for="signinSrConfirmPassword"
          >Confirm password</label
        >
        <input
          type="password"
          class="form-control"
          name="confirmPassword"
          id="signinSrConfirmPassword"
          placeholder="********"
          aria-label="********"
          required
          data-msg="Le password non corrispondono"
          data-error-class="u-has-error"
          data-success-class="u-has-success"
        />
      </div>
      <!-- End Form Group -->

      <!-- Checkbox -->
      <div class="js-form-message mb-5">
        <div
          class="custom-control custom-checkbox d-flex align-items-center text-muted"
        >
          <input
            type="checkbox"
            class="custom-control-input"
            id="termsCheckbox"
            name="termsCheckbox"
            required
            data-msg="Accetta i termini di utilizzo per continuare"
            data-error-class="u-has-error"
            data-success-class="u-has-success"
          />
          <label class="custom-control-label" for="termsCheckbox">
            <small>
              Accetto
              <a class="link-muted" href="/termini">Termini e Condizioni</a> di
              utilizzo
            </small>
          </label>
        </div>
      </div>
      <!-- End Checkbox -->

      <!-- Button -->
      <div class="row align-items-center mb-5">
        <div class="col-5 col-sm-6">
          <span class="small text-muted">Hai già un account?</span>
          <a class="small" href="/users/login">Login</a>
        </div>

        <div class="col-7 col-sm-6 text-right">
          <button type="submit" class="btn btn-primary transition-3d-hover">
            <i class="fas fa-user-plus"></i> Registrati
          </button>
        </div>
      </div>
      <!-- End Button -->
    </form>
  </div>
  <!-- End Login Form -->
</main>

<%- include ('partials/footer') %>
