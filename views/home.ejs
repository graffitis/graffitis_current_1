        <% posts.forEach((post) => { %>
        <% let test = null; %>
        <% if (post.special) { %>
        <%  test = ' border-bottom-3 border-warning' %>
        <% } %>

        <% if(post.cover || post.cover.length > 2) { %>
        <article class="card shadow mb-5 transition-3d-hover <%= test %>">
          <img id="postCover" style="height:25em;object-fit: cover;" class="card-img-top postCover"
            src="<%= post.cover %>" alt="L'immagine al momento non risulta disponibile" />

          <div class="card-body  p-5">
            <a class="d-inline-block text-secondary font-weight-medium text-uppercase small mb-2"
              href="/posts/categories/<%= post.category %>"><%= post.category %></a>



            <h2 class="h5 font-weight-medium">
              <a href="/posts/<%= post._id %>"><%= post.title %></a>
              <% if (post.special) { %>
              <a href="/posts/categories/specials">
                <span class="badge badge-warning text-white ml-1"><i class="fas fa-star mr-1"></i>Edizione
                  Speciale</span></a>
              <% } %>
            </h2>

            <p>
              <%= post.desc %>
            </p>

            <div class="media align-items-center pt-5">
              <div class="u-sm-avatar u-sm-avatar--bordered rounded-circle ml-n2" data-toggle="tooltip"
                data-placement="top" title="<%= post.author %>">
                <img class="img-fluid rounded-circle" src="<%= post.authorPic %>" alt="Image Description" />
              </div>
              <div class="media-body d-flex justify-content-end text-muted font-size-1 ml-2">

                <% let minuti = ('0'+post.edited.getMinutes()).slice(-2) %>

                <%= post.edited.toLocaleDateString("it-IT") %> @ <%= post.edited.getHours() %>:<%= minuti %>
              </div>
            </div>
          </div>
        </article>
        <!-- End Blog Card -->
        <% } else { %>
        <article class="card shadow mb-5 transition-3d-hover <%= test %>">
          <div class="card-body  p-5">
            <a class="d-inline-block text-secondary font-weight-medium text-uppercase small mb-2"
